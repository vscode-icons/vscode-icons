{
  "parserOptions": {
    "ecmaVersion": 5
  },
  "extends": [
    "airbnb-base/legacy"
  ],
  "globals": {
    "afterEach": true,
    "beforeEach": true,
    "afterAll": true,
    "beforeAll": true,
    "describe": true,
    "expect": true,
    "it": true,
    "fit": true,
    "test": true,
    "xdescribe": true,
    "fdescribe": true,
    "xit": true,
    "xtest": true
  },
  "rules": {
    "max-len": [
      2,
      {
        "code": 100
      }
    ],
    "no-console": [
      1,
      {
        "allow": [
          "error"
        ]
      }
    ],
    "no-restricted-syntax": [
      0,
      "ForInStatement"
    ],
    "func-names": 0,
    "vars-on-top": 0,
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}